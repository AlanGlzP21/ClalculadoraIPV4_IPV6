<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_ipv4_results"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="IPv4 Subnet Calculator Result"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- ScrollView para la tabla completa -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableLayout
                android:id="@+id/table_layout_results"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="1"
                android:paddingTop="16dp">

                <TableRow>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="IP Address:"
                        android:textSize="14sp" />
                    <TextView
                        android:id="@+id/tv_ip_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:singleLine="false" />
                </TableRow>

                <TableRow>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Network Address:"
                        android:textSize="14sp" />
                    <TextView
                        android:id="@+id/tv_network_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:singleLine="false" />
                </TableRow>

                <TableRow>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Usable Host  IP Range:"
                        android:textSize="14sp" />
                    <TextView
                        android:id="@+id/tv_usable_host_ip_range"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:singleLine="false" />
                </TableRow>

                <TableRow>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Broadcast Address:"
                        android:textSize="14sp" />
                    <TextView
                        android:id="@+id/tv_broadcast_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:singleLine="false" />
                </TableRow>

                <TableRow>

                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="Total Number of Hosts:"
                        android:textSize="14sp" />
                    <TextView
                        android:id="@+id/tv_total_number_of_hosts"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:singleLine="false" />
                </TableRow>

                <TableRow>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Number of Usable Hosts:"
                        android:textSize="14sp" />
                    <TextView
                        android:id="@+id/tv_number_of_usable_hosts"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:singleLine="false" />
                </TableRow>

                <TableRow>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Subnet Mask:"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_subnet_mask"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:singleLine="false" />
                </TableRow>

                <TableRow>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Wildcard Mask:"
                        android:textSize="14sp" />
                    <TextView
                        android:id="@+id/tv_wildcard_mask"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:singleLine="false" />
                </TableRow>

                <TableRow>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Binary Subnet Mask:"
                        android:textSize="14sp" />
                    <TextView
                        android:id="@+id/tv_binary_subnet_mask"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:singleLine="false" />
                </TableRow>

                <TableRow>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="IP Class:"
                        android:textSize="14sp" />
                    <TextView
                        android:id="@+id/tv_ip_class"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:singleLine="false" />
                </TableRow>

                <TableRow>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="CIDR Notation:"
                        android:textSize="14sp" />
                    <TextView
                        android:id="@+id/tv_cidr_notation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:singleLine="false" />
                </TableRow>

                <TableRow>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="IP Type:"
                        android:textSize="14sp" />
                    <TextView
                        android:id="@+id/tv_ip_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:singleLine="false" />
                </TableRow>

                <TableRow>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Short:"
                        android:textSize="14sp" />
                    <TextView
                        android:id="@+id/tv_short"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:singleLine="false" />
                </TableRow>

                <TableRow>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Binary ID:"
                        android:textSize="14sp" />
                    <TextView
                        android:id="@+id/tv_binary_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:singleLine="false" />
                </TableRow>

                <TableRow>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Integer ID:"
                        android:textSize="14sp" />
                    <TextView
                        android:id="@+id/tv_integer_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:singleLine="false" />
                </TableRow>

                <TableRow>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hex ID:"
                        android:textSize="14sp" />
                    <TextView
                        android:id="@+id/tv_hex_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:singleLine="false" />
                </TableRow>

                <TableRow>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="in-addr.arpa:"
                        android:textSize="14sp" />
                    <TextView
                        android:id="@+id/tv_in_addr_arpa"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:singleLine="false" />
                </TableRow>

                <TableRow>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="IPv4 Mapped Address:"
                        android:textSize="14sp" />
                    <TextView
                        android:id="@+id/tv_ipv4_mapped_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:singleLine="false" />
                </TableRow>

                <TableRow>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="6to4 Prefix:"
                        android:textSize="14sp" />
                    <TextView
                        android:id="@+id/tv_6to4_prefix"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:singleLine="false" />
                </TableRow>

            </TableLayout>
        </ScrollView>

        <Button
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Regresar"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btnShowSubnets"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Show /30 Subnets"
            android:layout_marginLeft="20dp"
            android:textSize="16sp"/>

    </LinearLayout>
</ScrollView>
